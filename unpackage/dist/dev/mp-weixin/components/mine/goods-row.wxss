.page {
  width: 100%;
  min-height: 100vh;
  background: #F0F0F0;
  overflow: hidden;
}
.goods {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  border: 2rpx solid #f0f0f0;
  border-bottom: 4rpx solid #FE0000;
  margin-top: 20rpx;
  padding: 15rpx 0;
  box-sizing: border-box;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.goods .pic-box {
    padding: 0 20rpx;
}
.goods image {
    width: 160rpx;
    height: 160rpx;
    background: red;
}
.goods .con {
    -webkit-box-flex: 1;
    -webkit-flex-grow: 1;
            flex-grow: 1;
    height: 100%;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    -webkit-box-align: start;
    -webkit-align-items: flex-start;
            align-items: flex-start;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    padding-right: 10%;
    box-sizing: border-box;
    position: relative;
}
.goods .con .title {
      width: 100%;
      font-size: 24rpx;
      color: #FE0000;
      font-weight: bold;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      autoprefixer: on;
      padding-right: 25%;
      box-sizing: border-box;
}
.goods .con .star {
      width: 100%;
      position: relative;
      font-size: 24rpx;
}
.goods .con .contex {
      font-size: 20rpx;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      autoprefixer: on;
}
.goods .con .address {
      width: 100%;
