.cons {
  overflow: hidden;
  width: 94%;
  padding: 0 3%;
}
.any-over {
  overflow: hidden;
}
.font-weig {
  font-weight: 600;
}
.page {
  width: 100%;
  min-height: 100vh;
  background: #F0F0F0;
  overflow: hidden;
}
.store {
  width: 100%;
}
.store .con-box {
    width: 710rpx;
    height: 200rpx;
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 10rpx #cfcdcd;
    padding: 28rpx;
    box-sizing: border-box;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    margin: 0 auto;
    margin-top: 20rpx;
}
.store .con-box image {
      width: 150rpx;
      height: 140rpx;
      background: pink;
}
.store .con-box .con {
      width: 450rpx;
      height: 100%;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      -webkit-box-align: start;
      -webkit-align-items: flex-start;
              align-items: flex-start;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
}
.store .con-box .con .title {
        width: 100%;
        font-size: 24rpx;
        color: #FE0000;
        font-weight: bold;
        -webkit-box-pack: justify;
        -webkit-justify-content: space-between;
                justify-content: space-between;
}
.store .con-box .con .title .left {
          width: 60%;
}
.store .con-box .con .title .right {
          display: inline-block;
          padding: 3rpx 18rpx;
          background: #FE0000;
          color: #ffffff;
          border-radius: 20rpx;
}
.store .con-box .con .contex {
        width: 100%;
        font-size: 20rpx;
}
.store .con-box .con .address {
        width: 100%;
        font-size: 20rpx;
        color: #FE0000;
}
.store .con-box .con .iconfont {
        width: 100%;
        font-size: 20rpx;
        margin-right: 20rpx;
        color: #FE0000;
