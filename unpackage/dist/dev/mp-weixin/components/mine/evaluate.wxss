  width: 94%;
  padding: 0 3%;
}
.any-over {
  overflow: hidden;
}
.font-weig {
  font-weight: 600;
}
.page {
  width: 100%;
  min-height: 100vh;
  background: #F0F0F0;
  overflow: hidden;
}
.evaluate-box {
  width: 100%;
  padding: 0 3%;
  box-sizing: border-box;
}
.evaluate-box .evaluate-box-li {
    width: 100%;
    border: 2rpx solid #dddddd;
    padding: 18rpx 15rpx;
    box-sizing: border-box;
    border-bottom: none;
    border-radius: 20rpx;
}
.evaluate-box .evaluate-box-li .top {
      width: 100%;
      height: 70rpx;
}
.evaluate-box .evaluate-box-li .canve {
      width: 70rpx;
      height: 70rpx;
      border-radius: 50%;
}
.evaluate-box .evaluate-box-li .name {
      max-width: 400rpx;
      height: 100%;
      font-size: 24rpx;
      line-height: 70rpx;
      margin-left: 20rpx;
}
.evaluate-box .evaluate-box-li .con {
      width: 100%;
      word-break: break-all;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      autoprefixer: on;
      font-size: 24rpx;
      margin: 8rpx 0;
}
.evaluate-box .evaluate-box-li .bottom {
      width: 100%;
      font-size: 20rpx;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      color: #8C8C8C;
}
.evaluate-box .evaluate-box-li .bottom .left {
        width: 50%;
        height: 100%;
}
.evaluate-box .evaluate-box-li .bottom .right {
        height: 100%;
}
.evaluate-box .evaluate-box-li .bottom .right view:nth-child(2) {
          margin-left: 20rpx;
}
.evaluate-box .evaluate-box-li .bottom .right view:nth-child(2).active {
          color: #FE0000;
}
.evaluate-box .evaluate-box-li .bottom .right .iconfont {
          margin-right: 10rpx;
          font-size: 22rpx;
}
.evaluate-box .evaluate-box-li:last-child {
    border-bottom: 2rpx solid #dddddd;
}
.evaluate-box .evaluate-box-li.active {
    border-bottom: 2rpx solid #dddddd;
    border-radius: 10rpx;
    box-shadow: 0px 0px 10rpx #bfbdbd;
    margin-top: 20rpx;
}

