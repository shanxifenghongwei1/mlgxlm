.list {
  width: 100%;
  padding: 0 3%;
  box-sizing: border-box;
}
.list .list-box {
    width: 100%;
    height: 100rpx;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    border-top: 1rpx solid #f0f0f0;
    padding: 0 10rpx;
    box-sizing: border-box;
}
.list .list-box .left {
      width: 60rpx;
      height: 60rpx;
      border-radius: 50%;
}
.list .list-box .center {
      width: 350rpx;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      autoprefixer: on;
}
.list .list-box .right {
      width: 180rpx;
      text-align: right;
}
.list .list-box:last-child {
    border-bottom: 1rpx solid #f0f0f0;
}
.list .list-box:nth-child(2n) {
    background: #ffffff;
}
.list .list-box:nth-child(2n-1) {
    background: #f0f0f0;
}

