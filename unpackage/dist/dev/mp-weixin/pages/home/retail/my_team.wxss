}
.box {
  width: 100%;
  height: 100%;
  background: #FE0000;
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}
.user-info {
  width: 100%;
  height: 140rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.user-info image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: #ffffff;
    margin-right: 20rpx;
}
.user-info .info-con {
    -webkit-box-flex: 1;
    -webkit-flex-grow: 1;
            flex-grow: 1;
    height: 100%;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    -webkit-box-align: start;
    -webkit-align-items: flex-start;
            align-items: flex-start;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #ffffff;
}
.user-info .info-con .name {
      width: 100%;
      text-align: left;
      padding: 10rpx 0;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      autoprefixer: on;
}
.user-info .info-con .code {
      display: inline-block;
      text-align: center;
      padding: 3rpx 18rpx;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      autoprefixer: on;
      border: 1rpx solid #ffffff;
      border-radius: 30rpx;
