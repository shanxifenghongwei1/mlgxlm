.header {
  width: 100%;
  height: 254rpx;
  background: #FE0000;
}
.header-box {
  width: 100%;
  height: 190rpx;
  padding: 30rpx 6%;
  box-sizing: border-box;
}
.header-box image {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}
.header-box .con {
    -webkit-box-flex: 1;
    -webkit-flex-grow: 1;
            flex-grow: 1;
