.any-flex, .page .shop-card, .page .shop-card .card-con, .page .shop-card .card-pic image, .page .shop-card .card-size {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cons {
  overflow: hidden;
  width: 94%;
  padding: 0 3%;
}
.any-over {
  overflow: hidden;
}
.font-weig {
  font-weight: 600;
}
.page {
  width: 100%;
  min-height: 100vh;
  background: #F0F0F0;
  overflow: hidden;
}
.font-padd {
  padding: 0 10rpx;
  color: #FE0000;
}
.page {
  width: 100%;
  padding: 20rpx 3%;
  box-sizing: border-box;
}
.page .shop-card {
    width: 100%;
    background: #ffffff;
    border-radius: 20rpx;
    box-shadow: #cccccc 0px 0px 10rpx;
    padding: 15rpx;
    box-sizing: border-box;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    margin-top: 20rpx;
}
.page .shop-card .card-con {
      width: 500rpx;
      height: 170rpx;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      -webkit-box-align: start;
      -webkit-align-items: flex-start;
              align-items: flex-start;
}
.page .shop-card .card-name {
      width: 100%;
      word-wrap: break-word;
}
.page .shop-card .card-name view {
      font-size: 24rpx;
      display: inline;
      word-break: break-all;
}
.page .shop-card .card {
      color: #FE0000;
}
.page .shop-card .card-pic {
      width: 100%;
      background: #ffffff;
}
.page .shop-card .card-pic .base {
        font-size: 30rpx;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        autoprefixer: on;
        font-weight: bold;
        width: 80%;
        margin: 0 auto;
}
.page .shop-card .card-pic image {
      display: inline-block;
      width: 110rpx;
      height: 110rpx;
      margin-right: 15rpx;
}
.page .shop-card .card-time {
      width: 100%;
      color: #FE0000;
      font-size: 20rpx;
}
.page .shop-card .dit {
      width: 5rpx;
      height: 170rpx;
}
.page .shop-card .card-size {
      -webkit-box-flex: 1;
      -webkit-flex-grow: 1;
              flex-grow: 1;
      height: 100%;
      background: #ffffff;
      color: #FE0000;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.page .shop-card .price {
      padding: 10rpx 0;
      font-size: 35rpx;
      font-weight: bold;
}
.page .shop-card .price image {
        width: 22rpx;
        height: 28rpx;
        margin-left: 5rpx;
}
.page .shop-card .manJian {
      width: 80%;
      padding: 10rpx 0;
      font-size: 24rpx;
      word-break: break-all;
      text-align: center;
}
.page .shop-card .use {
      margin-top: 10rpx;
      padding: 4rpx 10rpx;
      border: 1rpx solid #FE0000;
      font-size: 20rpx;
      border-radius: 20rpx;
}
.page .shop-card .draw {
      margin-top: 10rpx;
      padding: 4rpx 10rpx;
      font-size: 20rpx;
      background: #FE0000;
      color: #ffffff;
      border-radius: 50rpx;
}
.page .shop-card:first-child {
    margin-top: 0;
}
.page .advert {
    width: 100%;
    height: 240rpx;
    background: #pink;
    border-radius: 20rpx;
    box-shadow: #cccccc 0px 0px 10rpx;
    margin-top: 20rpx;
}

