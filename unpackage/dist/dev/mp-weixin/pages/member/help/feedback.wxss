  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cons {
  overflow: hidden;
  width: 94%;
  padding: 0 3%;
}
.any-over {
  overflow: hidden;
}
.font-weig {
  font-weight: 600;
}
.page {
  width: 100%;
  min-height: 100vh;
  background: #F0F0F0;
  overflow: hidden;
}
.opection {
  width: 100%;
  height: 110rpx;
  padding: 0 3%;
  box-sizing: border-box;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.opection .opection-li {
    width: 170rpx;
    height: 52rpx;
    border: 1rpx solid #BCBCBC;
    color: #666666;
    border-radius: 26rpx;
    text-align: center;
    line-height: 52rpx;
    font-size: 30rpx;
    margin-right: 20rpx;
}
.opection .active {
    border: 1rpx solid #FE0000;
    color: #FE0000;
}
.textarea-box {
  width: 100%;
  height: 280rpx;
  font-size: 24rpx;
  padding: 0 4%;
  box-sizing: border-box;
}
.textarea-box textarea {
    width: 100%;
    height: 250rpx;
}
.textarea-box .num {
    width: 100%;
    height: 30rpx;
    text-align: right;
}
.save {
  width: 100%;
  padding: 0 3%;
  box-sizing: border-box;
  margin-top: 40rpx;
}

