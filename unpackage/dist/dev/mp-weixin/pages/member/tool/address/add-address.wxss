.any-flex, .user, .right, .detail {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
      -ms-flex-pack: start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.cons {
  overflow: hidden;
  width: 94%;
  padding: 0 3%;
}
.any-over {
  overflow: hidden;
}
.font-weig {
  font-weight: 600;
}
.page {
  width: 100%;
  padding: 0 3%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.user {
  width: 100%;
  height: 80rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  font-size: 24rpx;
  border-bottom: 1rpx solid #cccccc;
}
.left {
  width: 130rpx;
  height: 100%;
  line-height: 85rpx;
}
.con {
  width: 30rpx;
  text-align: center;
}
.right {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
      -ms-flex-positive: 1;
          flex-grow: 1;
  height: 100%;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.right input {
    width: 100%;
    background: #ffffff;
    border: none;
}
.right image {
    width: 14rpx;
    height: 25rpx;
    padding-right: 10rpx;
}
.detail {
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
      -ms-flex-align: start;
          align-items: flex-start;
  width: 100%;
  font-size: 24rpx;
}
.detail .left {
    height: 80rpx;
}
.detail .con {
    width: 30rpx;
    text-align: center;
    line-height: 80rpx;
}
.detail textarea {
    -webkit-box-flex: 1;
    -webkit-flex-grow: 1;
        -ms-flex-positive: 1;
            flex-grow: 1;
    padding: 20rpx 0;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    margin-top: 10rpx;
    line-height: 100%;
    height: 130rpx;
}
.detail.active {
  margin-top: 20rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.detail.active image {
    width: 35rpx;
    height: 35rpx;
    padding-right: 20rpx;
}
button {
  margin-top: 20rpx;
}
.left {
  text-align: justify;
  text-justify: distribute-all-lines;
  /*ie6-8*/
  text-align-last: justify;
  /* ie9*/
  -moz-text-align-last: justify;
  /*ff*/
  -webkit-text-align-last: justify;
  /*chrome 20+*/
}
@media screen and (-webkit-min-device-pixel-ratio: 0) {
  /* chrome*/
.left:after {
    content: ".";
    display: inline-block;
    width: 100%;
    overflow: hidden;
    height: 0;
}
