.any-flex, .list1, .list2, .list3, .list4, .title, .con, .con .right, .opection {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cons {
  overflow: hidden;
  width: 94%;
  padding: 0 3%;
}
.any-over {
  overflow: hidden;
}
.font-weig {
  font-weight: 600;
}
.page {
  width: 100%;
  min-height: 100vh;
  background: #F0F0F0;
  overflow: hidden;
}
.list1, .list2, .list3, .list4 {
  width: 100%;
  margin-top: 20rpx;
  padding: 0 3%;
  box-sizing: border-box;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
  box-shadow: 0rpx 0rpx 10rpx #bfbdbd;
}
.title {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #cdcdcd;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 24rpx;
}
.title .left {
    font-weight: bold;
}
.icon-dianpu {
  font-size: 24rpx;
  margin-right: 10rpx;
}
.icon-lianxidaogou {
  font-size: 30rpx;
  margin-right: 10rpx;
}
.con {
  width: 100%;
  height: 240rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #cdcdcd;
  box-sizing: border-box;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.con .left {
    width: 190rpx;
    height: 100%;
    background: yellow;
}
.con image {
    width: 100%;
    height: 200rpx;
}
.con .right {
    width: 480rpx;
    height: 100%;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.con .li {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    autoprefixer: on;
    font-size: 24rpx;
}
.con .icon-chenggong, .con .icon-pingjia1, .con .icon-daifahuob, .con .icon-naozhong {
    font-size: 24rpx;
    margin-right: 5rpx;
}
.opection .btn-box {
  padding: 20rpx 0 20rpx 10rpx;
}
.opection .btn {
  width: 120rpx;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 36rpx;
  border-radius: 20rpx;
  border: 2rpx solid #666868;
  color: #666868;
}
.opection .btn.active {
  border: 2rpx solid #FE0000;
  color: #FE0000;
}

